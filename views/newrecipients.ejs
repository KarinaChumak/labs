<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <script src="http://code.jquery.com/jquery-1.8.3.js"></script>

</head>
<body>
<ol>
    <% for(var i=0; i < recipients.length; i++) { %>
    <li>
        <b><%= recipients[i].name + ' ' + recipients[i].surname%></b>
        <br/>
        <label>Diagnose: </label>
        <%= recipients[i].diagnose%>
        <br/>
        <label>Group: </label>
        <%= recipients[i].group + ' ' + recipients[i].rhesus%>
        <!--todo forms-->
        <br/>
        <button id = btn<%=i%>>Delete this recipient</button>
        <script>
            $("#btn<%=i%>").click(function() {
                $.ajax({
                    url: '/api/admin/delete/?' + $.param({id  : '<%=recipients[i]._id%>'}),
                    type: 'DELETE',
                    success: function(result) {
                    }
                });
            });
        </script>
        <br/>
        <button id = button<%=i%>>Accept this recipient</button>
        <script>
            $("#button<%=i%>").click(function() {
                $.ajax({
                    url: '/api/admin/accept/?' + $.param({id  : '<%=recipients[i]._id%>'}),
                    type: 'POST',
                    success: function(result) {
                    }
                });
            });
        </script>

    </li>
    <% } %>
</ol>

</body>
</html>